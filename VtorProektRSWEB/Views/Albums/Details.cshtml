@model VtorProektRSWEB.Models.Album

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YearPublished)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearPublished)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Label)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Label)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlbumCover)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.AlbumCover))
            {
                <img src="@Model.AlbumCover" alt="Album Cover" class="img-thumbnail" style="max-height: 200px;" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.priceVinyl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.priceVinyl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtistName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArtistName.Name)
        </dd>
        <dt class="col-sm-2">
            Tracks
        </dt>
        <dd class="col-sm-10">
            @if (Model.AlbumTracks != null && Model.AlbumTracks.Any())
            {
                <ul>
                    @foreach (var track in Model.AlbumTracks)
                    {
                        <li>@Html.DisplayFor(model => track.Name)</li>
                    }
                </ul>
            }
            else
            {
                <p>No tracks available for this album.</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
